{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/teachers/create">Novo</a>
    <table width="100%">
        <thead>
            <tr>
                <td>Nome completo</td>
                <td>Acompanhamento</td>
                <td>Ação</td>
            </tr>
        </thead>
        <tbody>
            {% for teacher in teachers %}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}
                </td>
                <td>{{teacher.services}}</td>
                <td><a href="/teachers/{{teacher.id}}">ver</td>

            </tr>
            {% endfor%}
        </tbody>
    </table>
    
   
</div>

    
{% endblock content %}