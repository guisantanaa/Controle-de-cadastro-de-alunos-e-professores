 <div class="item">
                <div>Avatar URL</div>
                <div>
                    <input 
                        type="url" 
                        name="avatar_url" 
                        placeholder="http://"
                        value="{{ student.avatar_url }}"
                        >
                </div>
            </div>

            <div class="item">
                <div>Aluno</div>
                <div>
                    <input 
                        type="text" 
                        name="name"        
                        value="{{student.name}}"
                        >
                </div>
            </div>

            <div class="item">
                <div>Email</div>
            <div>
            <input 
                type="email"
                name="email"
                value="{{ student.email }}"
                >
            </div>
        </div>

            <div class="item">
                <div>Data de nascimento</div>
            <div>
            <input 
            type="date" 
            name="birth"
            value="{{ student.birth }}"
            >
            </div>
        </div>


        <div class="item">
            <div>Ano Escolar</div>
