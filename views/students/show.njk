{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="image" 
    style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Details</h3>

        <div class="item">
            <div>Aluno</div>
            <div>{{ student.name }}</div>
        </div>

        <div class="item">
            <div>Aniversário</div>
            <div>{{ student.birth }}</div>
        </div>

        <div class="item">
            <div>Email</div>
            <div>{{ student.email }}</div>
        </div>

        <div class="item">
            <div>Carga Horária semanal</div>
            <div>{{ student.number }}</div>
        </div>


        

        

        <a type="show" href="/students/{{ student.id }}/edit">Editar</a>
        
    </section>
</div>

    
{% endblock content %}